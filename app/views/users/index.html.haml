= provide(:title , "Users")
%div
-flash.each do |name, msg|
  .alert.alert-success
    = link_to 'Ã—', '', class: "close", :data => {"dismiss" => "alert"}
    = label_tag msg
.center.hero-uni
  %h1.form-signin-heading Users
  .container
    %table.table.table-striped
      %tr
        %th First Name
        %th Last Name
        %th Email
        %th Edit
        %th Delete
      - @users.each do |user|
        %tr
          %td
            = link_to(user.first_name.capitalize, edit_user_path(user.id))
          %td
            = user.last_name.capitalize
          %td
            = user.email
          %td
            = link_to("Edit", edit_user_path(user.id))
          %td
            = link_to "Delete", user, method: :delete, data: { confirm: "Are you sure you wanted to delete this record?" }
    = paginate @users